<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/sebha_background"
    android:padding="16dp">

    <ImageView
        android:id="@+id/islamiLogo"
        android:src="@drawable/islami_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:id="@+id/sebhaMask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sebha"
        app:layout_constraintBottom_toTopOf="@id/sebhaBody"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/islamiLogo"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/sebhaBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sebha_body"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sebhaMask"
/>

    <TextView
        android:id="@+id/tasabeh"
        tools:text="سبحان الله"
        style="@style/headerMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/sebhaBody"
        app:layout_constraintBottom_toBottomOf="@id/sebhaBody"
        />

    <TextView
        tools:text="30"
        android:id="@+id/tasbehaCounter"
        style="@style/headerMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tasabeh"
        app:layout_constraintBottom_toBottomOf="@id/sebhaBody"
        />


</androidx.constraintlayout.widget.ConstraintLayout>